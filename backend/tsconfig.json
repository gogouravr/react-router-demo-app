{
    "compilerOptions": {
        "target": "ES2020", // Specify ECMAScript target version
        "module": "CommonJS", // Use ES module syntax
        "moduleResolution": "node", // Resolve modules as Node.js does
        "rootDir": "./src", // Root directory of input files
        "outDir": "./dist", // Directory for output files
        "strict": true, // Enable all strict type-checking options
        "esModuleInterop": true, // Allow import/export interoperability
        "skipLibCheck": true, // Skip type checking of all declaration files
        "forceConsistentCasingInFileNames": true, // Ensure file case consistency
        "resolveJsonModule": true, // Allow importing JSON files
        "sourceMap": true // Generate corresponding .map files
    },
    "include": [
        "src/**/*" // Include all files in the src directory
    ],
    "exclude": [
        "node_modules", // Exclude node_modules directory
        "dist" // Exclude dist directory
    ]
}